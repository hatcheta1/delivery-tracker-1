<div>
  <div>
    <h1>
      Delivery Tracker
    </h1>

    <p>
      Know if something gets lost in the mail.
    </p>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Expecting a package?
    </h2>

    <form action="/insert_delivery" method="post">

    <input type="hidden" name="query_user_id" value="<% current_user.id %>">

      <div>
        <label for="description_box">
          Description
        </label>

        <input type="text" id="description_box" name="query_description">
      </div>

      <div>
        <label for="supposed_to_arrive_on_box">
          Supposed to arrive on
        </label>

        <input type="date" id="supposed_to_arrive_on_box" name="query_supposed_to_arrive_on">
      </div>

      <div>
        <label for="details_box">
          Details
        </label>

        <textarea id="details_box" name="query_details"></textarea>

      </div>

      <div>
        <input type="checkbox" id="arrived_box" name="query_arrived" value="false">

        <label for="arrived_box">Arrived</label>
      </div>

      <button>
        Log delivery
      </button>
    </form>
  </div>
</div>

<hr>

<div class="waiting_on" background-color="lightgoldenrodyellow">
  <h2>Waiting on</h2>
</div>

<div>
  <div>
    <ul>

      <% @waiting_on_deliveries.each do |a_delivery| %>
      <tr>
        <li>
          <div>
            <%= a_delivery.description %>
          </div>

          <div>
            <p>Supposed to arrive on <%= a_delivery.supposed_to_arrive_on %></p>
          </div>

          <div>
            <%= a_delivery.details %>
          </div>

          <div>
            <form action="/modify_delivery/<% a_delivery.id %>">

              <input type="hidden" name="query_user_id" value="<% current_user.id %>">

            <input type="hidden" name="query_description" value="<% a_delivery.description %>">

            <input type="hidden" name="query_supposed_to_arrive_on" value="<% a_delivery.supposed_to_arrive_on %>">

            <input type="hidden" name="query_details" value="<% a_delivery.details %>">

            <input type="hidden" name="query_arrived" value="true">

            <button>
              Mark as recieved
            </button>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>

<hr>

<div class="received" background-color="lightgreen">
  <h2>Received</h2>
</div>

<div>
  <div>
    <ul>

      <% @received_deliveries.each do |a_delivery| %>
      <tr>
        <li>
          <div>
            <%= a_delivery.description %>
          </div>

          <div>
            <p>Updated <%= a_delivery.updated_at %></p>
            <a href="/delete_delivery/<% a_delivery.id %>">Delete</a>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>
